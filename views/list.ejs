<%- include("header") -%>

    <div class="box" id="heading">
      <h1> <%= kindOfDay %> </h1>
    </div>

<div class="box">
     <% for(let i=0; i < newListItem.length; i++){ %>
       <form action="/delete" method="post">
         <div class="item">
           <input type="checkbox" onchange="this.form.submit()" value="<%=newListItem[i]._id%>" name="checkbox">
           <p> <%=newListItem[i].name%> </p>
           <input type="hidden" name="listName" value="<%=kindOfDay%>"></input>
         </div>
       </form>
      <% } %>

  <form class="item" action="/" method="post">
    <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
    <button type="submit" name="listName" value="<%=kindOfDay%>">+</button>
  </form>
</div>


<%- include("footer") -%>
